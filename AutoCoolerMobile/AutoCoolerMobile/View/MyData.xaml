<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoCoolerMobile.View.MyData"
             Title="My Data"
             BackgroundColor="#F3F4F6">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Frame BackgroundColor="White"
                   CornerRadius="20"
                   Padding="24"
                   HasShadow="True"
                   BorderColor="#E5E7EB">

                <VerticalStackLayout Spacing="18">

                    <Label Text="ðŸ‘¤ My Information"
                           FontAttributes="Bold"
                           FontSize="28"
                           TextColor="#1F2937"
                           HorizontalOptions="Center"/>

                    <Label Text="{Binding User.FirstName, StringFormat='First Name: {0}'}"
                           FontSize="18" FontAttributes="Bold"
                           TextColor="#374151"/>

                    <Label Text="{Binding User.LastName, StringFormat='Last Name: {0}'}"
                           FontSize="18" FontAttributes="Bold"
                           TextColor="#374151"/>

                    <Label Text="{Binding User.Email, StringFormat='Email: {0}'}"
                           FontSize="17" TextColor="#4B5563"/>

                    <Label Text="{Binding User.Phone, StringFormat='Phone: {0}'}"
                           FontSize="17" TextColor="#4B5563"/>

                    <Label Text="{Binding User.UserName, StringFormat='Username: {0}'}"
                           FontSize="17" TextColor="#4B5563"/>

                    <HorizontalStackLayout Spacing="12" Margin="0,10,0,0">
                        <Frame BackgroundColor="#198754"
                               CornerRadius="12"
                               Padding="10,5"
                               HasShadow="False">
                            <Label Text="{Binding User.IsTechnician, StringFormat='Technician: {0}'}"
                                   FontSize="14" TextColor="White" FontAttributes="Bold"/>
                        </Frame>
                        <Frame BackgroundColor="#198754"
                               CornerRadius="12"
                               Padding="10,5"
                               HasShadow="False">
                            <Label Text="{Binding User.IsActive, StringFormat='Active: {0}'}"
                                   FontSize="14" TextColor="White" FontAttributes="Bold"/>
                        </Frame>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
