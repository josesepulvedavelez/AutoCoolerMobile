<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoCoolerMobile.View.LoginPage"
             Title="AutoCooler"
             BackgroundColor="#F5F7FA">

    <ScrollView>
        <Grid Padding="30,60,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <StackLayout Grid.Row="0" Spacing="20" Margin="0,0,0,40">
                <Frame CornerRadius="150"
                       WidthRequest="250"
                       HeightRequest="250"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       BackgroundColor="White"  
                       HasShadow="True"
                       BorderColor="White"
                       Padding="10">
                    <Image Source="logo.png" />
                </Frame>

                <Label Text="AutoCooler Mobile"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="#1F2937"
                       HorizontalOptions="Center"/>

                <Label Text="Welcome"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#1F2937"
                       HorizontalOptions="Center"/>

                <Label Text="Log in to your account"
                       FontSize="16"
                       TextColor="#6B7280"
                       HorizontalOptions="Center"/>
            </StackLayout>

            <StackLayout Grid.Row="1" Spacing="20">                
                <StackLayout Spacing="8">
                    <Label Text="User name"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#374151"/>

                    <Frame BackgroundColor="White"
                           CornerRadius="12"
                           Padding="0"
                           HasShadow="False"
                           BorderColor="#E5E7EB">
                        <Entry x:Name="userNameEntry"
                               Placeholder="Enter your username"
                               PlaceholderColor="#9CA3AF"
                               TextColor="#1F2937"
                               FontSize="16"
                               Margin="15,12"/>
                    </Frame>
                </StackLayout>

                <StackLayout Spacing="8">
                    <Label Text="Password"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#374151"/>

                    <Frame BackgroundColor="White"
                           CornerRadius="12"
                           Padding="0"
                           HasShadow="False"
                           BorderColor="#E5E7EB">
                        <Entry x:Name="passwordEntry"
                               Placeholder="Enter you password"
                               PlaceholderColor="#9CA3AF"
                               TextColor="#1F2937"
                               FontSize="16"
                               IsPassword="True"
                               Margin="15,12"/>
                    </Frame>
                </StackLayout>

                <Button Text="Login"
                        BackgroundColor="#007AFF"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        HeightRequest="50"
                        Margin="0,20,0,0"
                        Clicked="OnLoginClicked"/>

                <Label Text="Go to Company"
                       FontSize="16"
                       TextColor="#007AFF"
                       FontAttributes="Bold"
                       TextDecorations="Underline"
                       HorizontalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCompanyPage_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>

        </Grid>
    </ScrollView>

</ContentPage>