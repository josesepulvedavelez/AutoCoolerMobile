<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AutoCoolerMobile.ViewModel"
             x:Class="AutoCoolerMobile.View.MainPage"
             Title="Service Orders"
             BackgroundColor="#F5F7FA">

    <ContentPage.BindingContext>
        <viewmodels:ServiceOrderViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <CollectionView ItemsSource="{Binding ServiceOrders}" 
                        EmptyView="No service orders available"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged"
                        Margin="15">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="15"
                           Padding="15"
                           Margin="0,10"
                           BackgroundColor="White"
                           HasShadow="True"
                           BorderColor="#E5E7EB">
                        <StackLayout Spacing="6">
                            <Label Text="{Binding Type, StringFormat='Type: {0}'}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="#1F2937"/>

                            <Label Text="{Binding StatusName, StringFormat='Status: {0}'}"
                                   FontSize="14"
                                   TextColor="#1F2937" />

                            <Label Text="{Binding Make, StringFormat='Make: {0}'}"
                                   FontSize="14"
                                   TextColor="#374151"/>

                            <Label Text="{Binding Model, StringFormat='Model: {0}'}"
                                   FontSize="14"
                                   TextColor="#374151"/>

                            <Label Text="{Binding Name, StringFormat='Customer: {0}'}"
                                   FontSize="14"
                                   TextColor="#374151"/>

                            <Label Text="{Binding OrderDate, StringFormat='Date: {0:dd/MM/yyyy}'}"
                                   FontSize="12"
                                   TextColor="#6B7280"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>

</ContentPage>
